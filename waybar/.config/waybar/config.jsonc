[{
    "layer": "top",
    "output": "${MAIN_MONITOR}",
    "height": 36, // default: 30 (remove for auto height)
    // "width": 1280,
    "spacing": 5, // Gaps between modules in px (default: 4)
    "include": [
        "~/.config/waybar/default-modules.jsonc"
    ],
    "modules-left": ["clock", "hyprland/submap"],
    "modules-center": ["hyprland/workspaces"],
    // qtile: tray, volume, brightness, layout, memory, temperature, battery, exit button
    // polybar: volume brightness xkeyboard wlan eth smemory temperature battery powermenu
    "modules-right": [
        "tray",
        "pulseaudio",
        "backlight",
        "hyprland/language",
        "network",
        "memory",
        "temperature",
        "battery",
        "custom/power"
    ],
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#workspaces
    "hyprland/workspaces": {
        "format": "{name}",
        "format-icons": {
            "urgent": "",
            // "urgent": "",
            // "active": "",
            // "active": ""
            "active": "",
            // "default": ""
            // "default": ""
            "default": ""
        },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": []
        },
        // "persistent-only": true,
        "sort-by-number": true,
        "disable-scroll": true,
        "on-click": "activate"
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#submap
    "hyprland/submap": {
        "format": " {}",
        "tooltip": false
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Tray
    "tray": {
        // "icon-size": 21,
        "spacing": 7
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-PulseAudio
    "pulseaudio": {
        "scroll-step": 5, // default: 1%; can be a float
        //"format": "󰕾 {volume}%",
        //"format-muted": "󰖁 {volume}%",
        "on-click": "~/.local/bin/volume-control --toggle-mute",
        "on-click-right": "pavucontrol",
        "format": "{icon} {volume}%{format_source}",
        "format-bluetooth": "{icon} {volume}%",
        "format-bluetooth-muted": "󰖁 {icon}",
        "format-muted": "󰖁",
        // "format-source": " {volume}%",
        // "format-source": "",
        "format-source": "",
        // "format-source-muted": " ( )",
        // "format-source-muted": " ( )",
        "format-source-muted": " (󰍭)",
        "format-icons": {
            "headphone": "",
            "hands-free": "󰋐",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", "󰕾", ""]
        }
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Backlight
    "backlight": {
        "scroll-step": 10, // default: 1%; can be a float
        "format": "{icon} {percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#language
    "hyprland/language": {
        "format": " {}",
        "format-en": "en",
        "format-ru": "ru",
        "format-de": "de",
        "on-click": "~/.local/bin/keyboard-layout --toggle"
        // Get with `hyprctl devices`
        // "keyboard-name": "at-translated-set-2-keyboard"
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Network
    "network": {
        "interval": 1, // default: 60
        // "format-wifi": "󰖩 {essid}",
        // "format-disconnected": "󰖪",
        "format-wifi": "󰤨 {essid}", // this looks good
        "format-disconnected": "󰤭", // with Maple Mono NF
        "format-ethernet": "󰣺 {ipaddr}", // 󰛳
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "󰸇 {bandwidthUpBytes} | 󰮏 {bandwidthDownBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        // format-icons
        "on-click": "nm-connection-editor",
        "on-click-right": "nm-connection-editor"
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Memory
    "memory": {
        // "format": "{percentage}% "
        "format": "󰍛 {used:0.2f} GiB ({percentage}%)",
        "tooltip-format": "{used:0.2f} GiB / {total:0.2f} GiB",
        "interval": 1, // default: 30
        "on-click": "kitty -e btop"
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Temperature
    "temperature": {
        // "interval":  1, // default: 10
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 90,
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", "", "", ""],
        "tooltip": false
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Battery
    "battery": {
        "interval": 1, // default: 60
        "states": {
            // "good": 95,
            "warning": 30
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󰂄 {capacity}%",
        // "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        // "format-icons": ["", "", "", "", ""]
        "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Custom
    "custom/power": {
        // "format": "󰤆", // nf-md-power_standby
        "format": "󰐥", // nf-md-power
        "on-click": "$HOME/.local/bin/powermenu --use-powertheme",
        "on-click-right": "rofi -show drun"
    }
}, {
    "layer": "top",
    "output": "!${MAIN_MONITOR}", // exclude main monitor
    "height": 36, // default: 30 (remove for auto height)
    // "width": 1280,
    "spacing": 5, // Gaps between modules in px (default: 4)
    "include": [
        "~/.config/waybar/default-modules.jsonc"
    ],
    "modules-left": ["clock"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [],
    // Docs: https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#workspaces
    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {
            "7": [],
            "8": [],
            "9": []
        },
        // "persistent-only": true,
        "sort-by-number": true,
        "disable-scroll": true,
        "on-click": "activate"
    }
}]
