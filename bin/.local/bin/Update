#!/usr/bin/env bash

OS=$(awk -F= '$1=="ID" { print $2 ;}' /etc/os-release)

# package manager updates
if [[ $OS == ubuntu ]]; then
    sudo apt update
    sudo apt upgrade -y
    # see https://www.networkworld.com/article/3453032/cleaning-up-with-apt-get.html
    # sudo apt clean -y
    sudo apt autoclean -y
    sudo apt autoremove -y
elif [[ $OS == arch ]]; then
    if command -v paru > /dev/null; then
        paru -Syu --noconfirm
    else
        sudo pacman -Syu --noconfirm
    fi
    # apt autoremove
    orphans=$(pacman -Qdtq)
    if [[ -n $orphans ]]; then
        # shellcheck disable=SC2086
        sudo pacman -R --noconfirm $orphans
    fi
else
    echo "Error: OS not supported"
    exit 1
fi

# flatpak
if command -v flatpak > /dev/null; then
    flatpak update -y
fi

# zap
# This doesn't work, since zap.zsh needs to be sourced first for zap command
# to exist
# if [[ -f ~/.local/share/zap/zap.zsh ]] > /dev/null; then
#     zap update all
# fi
