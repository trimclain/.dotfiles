#!/usr/bin/env bash

OS=$(awk -F= '$1=="ID" { print $2 ;}' /etc/os-release)

if [[ $OS == arch ]]; then
    if command -v paru &> /dev/null; then
        paru -Syu
        # TODO: autoremove?
        # sudo pacman -R $(pacman -Qdtq)
    else
        sudo pacman -Syu
        # sudo pacman -R $(pacman -Qdtq)
    fi
else
    sudo apt update
    sudo apt upgrade -y
    sudo apt autoremove -y
fi

