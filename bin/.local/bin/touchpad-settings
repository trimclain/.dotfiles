#!/usr/bin/env bash

# TODO: this is useless if I persist config changes in libinput
# This script updates some touchpad settings

# Get touchpad name
TOUCHPAD=$(xinput --list --name-only | grep Touchpad)

# Give me that Natural Scrolling
xinput set-prop "$TOUCHPAD" 'libinput Natural Scrolling Enabled' 1
# Tapping is also very much welcome
xinput set-prop "$TOUCHPAD" 'libinput Tapping Enabled' 1
