#!/usr/bin/env bash

###############################################################################
# Use different neovim config folders
###############################################################################

# TODO: add color

CONFLIST=~/.nvim_configs

check_if_command_exists() {
    if ! command -v "$1" > /dev/null; then
        echo "Error: $1 not found"
        exit 1
    fi
}

# Determine if $CONFLIST exists.
list_exists() {
    [[ -f $CONFLIST ]] && return 0 ||  return 1
}

# Determine if $CONFLIST is empty. Also return 0 if the list doesn't exist.
list_empty() {
    if list_exists; then
        [[ $(cat $CONFLIST | wc -l) -eq 0 ]] && return 0 || return 1
    fi
    return 0
}

print_configs() {
    if ! list_exists; then
        echo "List not found";
    elif list_empty; then
        echo "List is empty"
    else
        echo -e "List of Configs:\n"
        cat $CONFLIST;
    fi
}

add_config() {
    [[ -z $1 ]] && echo "Error: No config given" && return 1
    [[ ! -d $1 ]] && echo "Error: $1 is not a directory" && return 1

    CONFNAME=$(basename "$1")
    # Check if name already in the list
    if [[ -f $CONFLIST ]] && cat $CONFLIST | grep -q "$CONFNAME"; then
        echo "Error: config $CONFNAME is already in the list"
        return 1
    fi

    # Copy to ~/.config/ if not there
    if [[ ! $1 == ~/.config/* ]] && ! command ls ~/.config/ | grep -q "$1"; then
        echo -n "Copying $1 to ~/.config... "
        cp -r "$1" ~/.config/
        echo "Done"
    fi

    # Add to the list
    echo -n "Adding $CONFNAME to the list... "
    echo "$CONFNAME" >> $CONFLIST
    echo "Done"
    return 0
}

delete_config() {
    [[ -z $1 ]] && echo "Error: No config given" && return 1
    if ! list_exists; then echo "Error: list doesn't exist" && return 1; fi

    # Check if name already in the list
    if [[ -f $CONFLIST ]] && cat $CONFLIST | grep -q "$1"; then
        echo -n "Deleting $1 from ~/.config/... "
        rm -r "$HOME/.config/$1"
        echo "Done"
        echo -n "Deleting $1 from the list... "
        sed -i "/$1/d" $CONFLIST
        echo "Done"
        return 0
    fi
    echo "Error: config $1 is not in the list"
    return 1
}

delete_config_list() {
    echo -n "Deleting the list... "
    rm -rf ~/.nvim_configs
    echo "Done"
}

use_config() {
    # check_if_command_exists nvim
    # check_if_command_exists fzf

    if [[ -n $1 ]] && [[ -d ~/.config/$1 ]]; then
        NVIM_APPNAME=$1 nvim
        return 0
    fi

    if ! list_empty; then
        CHOSEN=$(cat $CONFLIST | fzf)
        NVIM_APPNAME=$CHOSEN nvim
        return 0
    fi

    echo "Error: unknown"
    return 1
}

main() {
    if [ -n "$1" ]; then

        if [[ $1 == "add" ]] || [[ $1 == "a" ]]; then
            add_config "$2"
        fi

        if [[ $1 == "del" ]] || [[ $1 == "d" ]]; then
            delete_config "$2"
        fi

        if [[ $1 == "use" ]] || [[ $1 == "u" ]]; then
            use_config "$2"
        fi

        if [[ $1 == "ls" ]] || [[ $1 == "l" ]]; then
            print_configs
        fi

    else
        use_config
    fi
}

main "$@"
