#!/usr/bin/env bash

# Create a zip archive
if [[ -f $1 ]]; then
    filename=$(basename -- "$1")
    # extension="${filename##*.}"
    filename="${filename%.*}"
    if [ -f /usr/bin/7z ]; then
        7z a -tzip "$filename.zip" "$1"
    else
        zip -r "$filename.zip" "$1"
    fi
elif [[ -d $1 ]]; then
    if [ -f /usr/bin/7z ]; then
        7z a -tzip "$1.zip" "$1"
    else
        zip -r "$1.zip" "$1"
    fi
else
    echo "Error: Need a file/folder to archive";
fi
