#!/usr/bin/env bash

mode="unknown"

# get info from xrandr
connectedOutputs=$(xrandr | awk '$2 == "connected"{print $1}')
# activeOutput=$(xrandr | grep -E " connected (primary )?[1-9]+" | sed -e "s/\([A-Z0-9]\+\) connected.*/\1/")

monitors=()
for display in $connectedOutputs; do
    monitors+=($display)
done

# Names: Dell(eDP-1-1,HDMI-1-1), Asus(edp, HDMI-1-0)
intern=${monitors[0]}

current=$(xrandr --verbose | awk '/Brightness/ { print $2; exit }')
new="$current"

# Increase Brightness
if [ "$1" = "--increase" ]
then
    mode="increase"
    new="$( echo $current+0.1 | bc )"

    # don't got out of range
    if [[ $new == 1.1 ]]; then
        exit 0
    fi
fi

# Decrease Brightness
if [ "$1" = "--decrease" ]
then
    mode="decrease"
    new="$( echo $current-0.1 | bc )"

    # don't got out of range
    if [[ $new == 0 ]]; then
        exit 0
    fi
fi

# Set Brightness
xrandr --output $intern --brightness $new


# Send notification
output=$( echo $new*100/1 | bc )
if  [ "$mode" = "increase" ]; then
    notify-send "ðŸ”† $output %" -t 350
elif [ "$mode" = "decrease" ]; then
    notify-send "ðŸ”… $output %" -t 350
else
    notify-send 'Error: something went wrong' -t 500
fi
