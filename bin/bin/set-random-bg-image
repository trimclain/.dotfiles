#!/usr/bin/env python3

import os
import random
import subprocess
from pathlib import Path

def main():
    IMG_FOLDER = os.path.join(Path.home(),'personal/images/murzchnvok-wallpapers')
    files = os.listdir(IMG_FOLDER)
    chosen_bg_image = random.choice(files)
    chosen_bg_image_path = os.path.join(IMG_FOLDER, chosen_bg_image)
    subprocess.run(['feh', '--bg-scale', chosen_bg_image_path])

if __name__ == "__main__":
    main()
