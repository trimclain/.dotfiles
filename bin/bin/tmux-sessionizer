#!/usr/bin/env bash

selected=$1

tmux_session_name=`basename $selected | tr . _`

tmux switch-client -t $tmux_session_name
if [[ $? -eq 0 ]]; then
    exit 0
fi

tmux new-session -c $selected -d -s $tmux_session_name &&\
    tmux switch-client -t $tmux_session_name ||\
    tmux new -c $selected -A -s $tmux_session_name

