# INFO: for awailable options use `man zathurarc`

set sandbox none
# don't show the statusbar on startup
set guioptions none
set statusbar-h-padding 1
set statusbar-v-padding 1
set selection-clipboard clipboard
# start in night-mode
# set recolor true

# Defaults:
map <C-u> scroll half-up
map <C-d> scroll half-down
map <C-r> recolor
map <C-p> print

# toggle_statusbar by default, fits better as night-mode switch
map <C-n> recolor

map r reload
map R rotate

# Zoom
map K zoom in
map J zoom out

# Next/Previous page
map u navigate previous
map d navigate next
map <Left> navigate previous
map <Right> navigate next
map [fullscreen] u navigate previous
map [fullscreen] d navigate next

# Top and Bottom of the page
map b scroll page-top
map e scroll page-bottom
map [fullscreen] b scroll page-top
map [fullscreen] e scroll page-bottom

# TODO: add a shortcut for :nohl

# FIX: Toggle presentation mode
# map p change_mode presentation
# map [presentation] p change_mode normal

# Toggle statusbar
map <C-s> toggle_statusbar

# Show or hide index (I use <C-i> and <C-o> like in vim)
# map <C-i> toggle_index
# map [index] <C-i> toggle_index

# Toggle between one and multiple pages per row
map D toggle_page_mode

#############################
# Colorscheme
#############################

# vscode dark zathura colorscheme

set default-bg                  "#1e1e1e"
set default-fg                  "#d4d4d4"

set statusbar-bg                "#1e1e1e"
set statusbar-fg                "#808080"

set inputbar-bg                 "#1e1e1e"
set inputbar-fg                 "#d4d4d4"

set notification-error-bg       "#1e1e1e"
set notification-error-fg       "#f44747"

set notification-warning-bg     "#1e1e1e"
set notification-warning-fg     "#d7ba7d"

set highlight-color             "#007acc"
set highlight-active-color      "#d4d4d4"

set completion-highlight-fg     "#56b6c2"
set completion-highlight-bg     "#1e1e1e"

set completion-bg               "#1e1e1e"
set completion-fg               "#d4d4d4"

set notification-bg             "#1e1e1e"
set notification-fg             "#d4d4d4"

set recolor-lightcolor          "#1e1e1e"
set recolor-darkcolor           "#d4d4d4"

set index-fg                    "#d4d4d4"
set index-bg                    "#1e1e1e"

set index-active-fg             "#56b6c2"
set index-active-bg             "#1e1e1e"

