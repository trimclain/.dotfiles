# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        # TODO: try polybar with bashs config
        # output_format = "dzen2"
        output_format = "i3bar"
        colors = true
        # dracula config
        color_good = "#50FA7B"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
        interval = 5
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "disk /"
# order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        # format_up = "W: (%quality at %essid) (%bitrate / %frequency) %ip"
        format_up = "🆆 %quality at %essid"
        format_down = "🆆 ⬇"
}

ethernet _first_ {
        # format_up = "E: %ip (%speed)"
        format_up = "🅴 (%speed)"
        format_down = "🅴 ⬇"
}

battery all {
        # format = "%status %percentage %remaining (%emptytime %consumption)"
        format = "%status %percentage (Left: %remaining)"
        low_threshold = 20
        threshold_type = time
        status_bat = 🔋
        status_chr = ⚡
        status_unk = 🤔
        status_full = 😃
}

# disk "/" {
#         format = "%avail"
# }

# load {
#         format = "%1min"
# }

memory {
        format = "🆁 %used / %total (%percentage_used)"
        threshold_degraded = "1G"
        format_degraded = "RAM < %available"
}

volume master {
        format = "🔊: %volume"
        format_muted = "🔇 (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = "%a %d/%m/%Y %H:%M"
}
