cpu_usage {
    # format = "💻 at %usage ( 1: [%cpu0] 2: [%cpu1] 3: [%cpu2] 4: [%cpu3] )"
    format = " cpu: %usage"
}

cpu_temperature 0 {
        # format = "🌡 %degrees °C"
        format = " %degrees "
        max_threshold = 80
        # format_above_threshold = "⚠ Warning 📛: %degrees °C"
        format_above_threshold = " : %degrees "
}

memory {
        format = "🆁 %used / %total (%percentage_used)"
        threshold_degraded = "20%"
        format_degraded = "🆁  %available"
}

volume master {
        # format = "🔊: %volume"
        format = "墳 %volume"
        # format_muted = "🔇 (%volume)"
        format_muted = "婢 (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %a %d/%m/%Y %H:%M"
}
