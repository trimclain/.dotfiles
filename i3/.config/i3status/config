general {
        # TODO: try polybar with bashs config
        # output_format = "dzen2"
        output_format = "i3bar"
        colors = true
        # dracula config
        color_good = "#50FA7B"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
        interval = 5
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "disk /"
# order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        # format_up = "W: (%quality at %essid) (%bitrate / %frequency) %ip"
        # format_up = "🆆 %quality at %essid"
        # format_up = "直 %quality at %essid"
        format_up = "  %essid (%quality)"
        # format_down = "🆆 ⬇"
        format_down = "睊"
}

ethernet _first_ {
        # format_up = "E: %ip (%speed)"
        format_up = "🅴 %ip (%speed)"
        # format_up = "  %ip (%speed)"
        # format_down = "🅴 ⬇"
        format_down = "🅴 "
}

battery all {
        # format = "%status %percentage %remaining (%emptytime %consumption)"
        format = "%status %percentage"
        low_threshold = 30
        threshold_type = time
        # status_bat = 🔋
        status_bat = 
        # status_chr = ⚡
        status_chr = 
        # status_unk = 🤔
        # status_unk = 🗿
        status_unk = 
        # status_full = 😃
        # status_full = 🟢
        status_full = 
}

