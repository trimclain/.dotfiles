#!/usr/bin/env bash

# Unstow it all coz no error when symlink doesn't exist
STOW_FOLDERS="bin,bash,i3,awesome,polybar,nvim,chtsh,tmux,vim,zsh,kitty,alacritty,rofi,picom,lf"

# Unstowing Everything
echo Removing all symlinks...

if [[ -n $DOTFILES ]]; then
    pushd $DOTFILES > /dev/null

    for folder in $(echo $STOW_FOLDERS | sed "s/,/ /g"); do
        stow -D $folder
    done

    echo Done
    popd > /dev/null
else

    for folder in $(echo $STOW_FOLDERS | sed "s/,/ /g"); do
        stow -D $folder
    done

    echo Done

fi
